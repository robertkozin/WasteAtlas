      }

      .banner {
        background-color: #fdd22a;
        color: #000;
        font-family: var(--font-erode);
        font-weight: 500;
        font-size: 64px;
        position: absolute;
        top: 0px;
        right: -100px;
        width: 100%;
        transform: rotate(45deg);
        display: flex;
        overflow: hidden;
        white-space: nowrap;
        gap: 0;
        width: 500px;
      }

      .banner:hover span {
        animation-play-state: paused;
      }

      .banner span {
        padding-left: 0.8ch;
        animation-duration: 15s;
        animation-iteration-count: infinite;
        animation-name: marquee-content;
        animation-timing-function: linear;
        display: block;
      }

      @keyframes marquee-content {
        0% {
          transform: translateX(100);
        }
        100% {
          transform: translateX(-100%);
        }
      }

      dl {
        display: grid;
        grid-gap: 4px 16px;
        grid-template-columns: max-content;
      }
      dt {
        /* font-weight: bold; */
      }
      dd {
        margin: 0;
        grid-column-start: 2;
      }

      .project .desc {
        border-radius: 30px;
        padding: 45px 70px;
